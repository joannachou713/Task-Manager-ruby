<% content_for(:title, "Profile Page") %>

<h1 class="mb-3 text-center title">User Profile</h1>
<% if current_user.admin? %>
  <div class='p-4 mb-5 panel'>
    <h5><%= t('user.basicinfo') %></h5>
    <div class='row'>
      <div class="col-4 d-flex">
        <div class="me-3"><%= t('user.name') %></div>
        <div>
          <%= @user.name %>
          <% if @user.admin? %>
            <span class="badge status-2 ms-3"><%= t('user.admin') %></span>
          <% end %>
        </div>
      </div>
      <div class="col-4 d-flex">
        <div class="me-3">Email</div>
        <div><%= @user.email %></div>
      </div>
      <div class="col-4 d-flex">
        <div class="me-3"><%= t('user.create') %></div>
        <div><%= @user.created_at.strftime("%m %d, %Y") %></div>
      </div>
    </div>

    <h5 class="mt-4"><%= t('user.tasklist') %></h5>

    <%= render "tasks/tasklist", tasks: @tasks %>

    <div class="w-100 d-flex justify-content-center align-items-center">
      <%= paginate @tasks, theme: 'twitter-bootstrap-4'%>
    </div>
  </div>
  <div class="w-100 d-flex justify-content-center align-items-center">
    <%= link_to t('user.back-admin'), admin_path, class:"btn btn-primary"%>
  </div>

<% else %>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <div class='p-4 mb-5 panel w-50'>
      <h5 class='text-center mb-3'><%= t('user.basicinfo') %></h5>
        <div class="d-flex mb-3">
          <div class="me-3 col-3"><%= t('user.name') %></div>
          <div class="col-9">
            <%= @user.name %>
            <% if @user.admin? %>
              <span class="badge status-2 ms-3"><%= t('user.admin') %></span>
            <% end %>
          </div>
        </div>
        <div class="d-flex mb-3">
          <div class="me-3 col-3">Email</div>
          <div class="col-9"><%= @user.email %></div>
        </div>
        <div class="d-flex mb-3">
          <div class="me-3 col-3"><%= t('user.create') %></div>
          <div class="col-9"><%= @user.created_at.strftime("%m %d, %Y") %></div>
        </div>
    </div>
  </div>
<% end %>
