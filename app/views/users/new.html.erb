<% content_for(:title, "Sign Up") %>
<div class="d-flex flex-column justify-content-center align-items-center">
<h1 class="mb-3 title text-center">Sign Up</h1>

<div class="shadow panel p-4 w-25">

<%= bootstrap_form_with(model: @user, local: true) do |f| %>
  
  <div class='mb-3'><%= f.text_field :name, label: '姓名' %></div>
  
  <div class='mb-3'><%= f.email_field :email, label: '' %></div>
  
  <div class='mb-3'><%= f.text_field :tel, label: '' %></div>
  
  <div class='mb-3'><%= f.password_field :password, label: '' %></div>
  
  <div class='mb-4'><%= f.password_field :password_confirmation, label: '' %></div>

  <div class="d-flex justify-content-center"><%= f.submit "Create my account", class: 'btn btn-outline-secondary' %></div>

<% end %>

</div>
</div>