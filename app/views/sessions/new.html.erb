<% content_for(:title, "Log in") %>
<div class="d-flex flex-column justify-content-center align-items-center">
  <h1 class="mb-3 title text-center">Log in</h1>

  <div class="shadow panel p-4 w-25">

    <%= bootstrap_form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class='mb-3'><%= f.email_field :email, label: '' %></div>
      <div class='mb-3'><%= f.password_field :password, label: '' %></div>

      <div class='mb-4'>
        <%= f.label :remember_me, class: 'checkbox inline' do%>
          <%= f.check_box :remember_me, label: 'Remember me on this computer' %>
        <% end %>
      </div>
      <div class="mb-4 d-flex justify-content-center"><%= f.submit "Log in", class: 'btn btn-outline-secondary' %></div>
    <% end %>

    <div class="text-center">New user? <%= link_to "Sign up now!", signup_path  %></div>
  </div>
</div>
