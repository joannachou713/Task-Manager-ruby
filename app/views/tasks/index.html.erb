<h1 class="mb-3">Task Manager</h1>
<%= link_to "新增", new_task_path, class:"btn btn-primary mb-3"%>

<table class="table">
  <thead>
    <tr>
      <td>任務名稱</td>
      <td>開始時間</td>
      <td>結束時間</td>
      <td>優先度</td>
      <td>狀態</td>
      <td>標籤</td>
      <td>動作</td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.start %></td>
      <td><%= task.end %></td>
      <td>
        <% case task.priority 
           when 1 %>低
        <% when 2 %>中
        <% when 3 %>高
        <% end %>
      </td>
      <td>
        <% case task.priority 
           when 1 %>待處理
        <% when 2 %>進行中
        <% when 3 %>已完成
        <% end %>
      </td>
      <td>label</td>
      <td>
        <%= link_to "編輯", edit_task_path(task) %>
        <%= link_to "刪除", task_path(task), method: "delete", data: { confirm: "確認刪除" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>