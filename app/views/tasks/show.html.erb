<div class="pb-5 d-flex flex-column align-items-center">

  <h1 class="mb-3 title text-center fw-normal"><%= @task.title %></h1>
  <div class="panel p-5 w-75">
  <%= @task.user.name %>
  <%= @task.user.email %>

    <div class='row mt-3'><div class='col-2'><%= t('show.start') %></div><div class='col-10'><%= @task.start.strftime("%m %d, %Y") %></div></div>
    <div class='row mt-2'><div class='col-2'><%= t('show.end') %></div><div class='col-10'><%= @task.endtime.strftime("%m %d, %Y") %></div></div>


    <div class='mt-3 row'>
      <div class='col-2'><%= t('show.content') %></div><div class='col-10'><%= @task.content %></div>
    </div>


    <div class='row mt-3'><div class='col-2'>優先度</div><div class='col-10'><span class="badge priority-<%= @task.priority %>"><%= t('show.priority')[@task.priority] %></span></div></div>
    <div class='row mt-2'><div class='col-2'>狀態</div><div class='col-10'><span class="badge status-<%= @task.status %>"><%= t('show.status')[@task.status] %></span></div></div>

    <div class='row mt-2'>
      <div class='col-2'>標籤</div>
      <div class='col-10'>
        <% @task.labels.each do |label| %>
          <span class="badge me-2 label_colors<%= label.color %>">
            <%= label.name %>
          </span>
        <% end %>
      </div>
    </div>


  </div>
<% if current_user.admin? && @task.user!=current_user %>
  <%= link_to t('user.admin-text.back-profile'), user_path(@task.user), class:"btn btn-primary mt-4"%>
<% else %>
  <%= link_to t('show.back'), tasks_path, class:"btn btn-primary mt-4"%>
<% end %>
</div>
